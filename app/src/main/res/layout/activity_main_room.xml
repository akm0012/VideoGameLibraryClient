<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivityRoom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/getAllGamesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get All Games" />

        <Button
            android:id="@+id/getMultiPlayerGamesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get MultiPlayer Games" />

        <Button
            android:id="@+id/getGamesSortedAlphaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Games sorted Alphabetically" />

        <Button
            android:id="@+id/getGamesBySpecificDeveloperButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Games by specific developer" />

        <Button
            android:id="@+id/getGamesBySpecificReleaseYearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Games by specific release year" />

        <Button
            android:id="@+id/getGamesInServerOrderButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Games in Server Order" />

        <Button
            android:id="@+id/insertRandomGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insert Random Game" />

        <Button
            android:id="@+id/deleteAllGames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete All Games" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>